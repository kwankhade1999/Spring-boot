pipeline {
    agent none

    stages {


        stage('Build and Push Docker Image') {
            agent any
            environment {
                DOCKER_IMAGE = "kunalwankhade/ultimate-cicd-pipeline:${BUILD_NUMBER}"
            }
            steps {
                script {
                    sh 'docker build -t ${DOCKER_IMAGE} .'
                    docker.withRegistry('https://index.docker.io/v1/', 'docker-hub-creds') {
                        docker.image(DOCKER_IMAGE).push()
                    }
                }
            }
        }

        stage('Update Deployment File') {
    agent any   
    environment {
        GIT_REPO_NAME = "Test-One"
        GIT_USER_NAME = "kwankhade1999"
    }

    steps {
        withCredentials([string(credentialsId: 'github-token', variable: 'GITHUB_TOKEN')]) {
            sh '''
              set -e

              git config user.email "kwankhade1999@users.noreply.github.com"
              git config user.name "kwankhade1999"

              git checkout main || git checkout -b main
              git pull --rebase origin main

              sed -i "s#image: kunalwankhade/ultimate-cicd-pipeline:.*#image: kunalwankhade/ultimate-cicd-pipeline:${BUILD_NUMBER}#" Test-One/deployment.yml

              git add Test-One/deployment.yml
              git commit -m "Update deployment image to ${BUILD_NUMBER}" || echo "No changes to commit"

              git push https://${GIT_USER_NAME}:${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git main
            '''
        }
    }
}

    }
}
