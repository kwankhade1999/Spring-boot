pipeline {

    agent {
        docker {
            // Docker image used as Jenkins agent (contains Maven + Docker CLI)
            image 'abhishekf5/maven-abhishek-docker-agent:v1'

            // Run container as root and mount Docker socket
            // This allows Jenkins (inside container) to access host Docker daemon
            args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    options {
        // Disable Jenkins automatic SCM checkout
        skipDefaultCheckout(true)
    }

    stages {

        stage('Checkout') {
            steps {
                // Clean workspace to avoid permission issues
                deleteDir()

                // Checkout source code from GitHub repository
                git branch: 'main',
                    url: 'https://github.com/kwankhade1999/Spring-boot.git',
                    credentialsId: 'github-token'

                // Confirm checkout
                sh 'echo "Checkout completed"'
            }
        }

        stage('Build and Test') {
            steps {
                // List files to verify workspace content
                sh 'ls -ltr'

                // Build the Spring Boot application and generate JAR
                sh 'mvn clean package'
            }
        }

        stage('Static Code Analysis') {
            environment {
                // SonarQube server URL
                SONAR_URL = "http://13.232.207.1:9000"
            }
            steps {
                // Fetch SonarQube authentication token securely
                withCredentials([string(credentialsId: 'sonarqube-token', variable: 'SONAR_AUTH_TOKEN')]) {

                    // Run SonarQube analysis using Maven plugin
                    sh '''
                    mvn sonar:sonar \
                      -Dsonar.login=$SONAR_AUTH_TOKEN \
                      -Dsonar.host.url=$SONAR_URL
                    '''
                }
            }
        }

        stage('Build and Push Docker Image') {
            environment {
                // Docker image name with Jenkins build number as tag
                DOCKER_IMAGE = "lejub02/ultimate-cicd-pipeline:${BUILD_NUMBER}"
            }
            steps {
                script {
                    // Build Docker image from Dockerfile in root directory
                    sh 'docker build -t ${DOCKER_IMAGE} .'

                    // Push Docker image to Docker Hub
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-creds') {
                        docker.image(DOCKER_IMAGE).push()
                    }
                }
            }
        }

        stage('Update Deployment File') {
            environment {
                // GitHub repository details
                GIT_REPO_NAME = "<YourRepo>"
                GIT_USER_NAME = "<YourUser>"
            }
            steps {
                // Use GitHub Personal Access Token securely
                withCredentials([string(credentialsId: 'github-token', variable: 'GITHUB_TOKEN')]) {

                    sh '''
                    git config --global user.email "<your-email@example.com>"
                    git config --global user.name "<Your Name>"

                    git checkout main
                    git pull origin main

                    sed -i "s#image: lejub02/ultimate-cicd-pipeline:.*#image: lejub02/ultimate-cicd-pipeline:${BUILD_NUMBER}#" spring-boot-app-manifests/deployment.yml || echo "deployment file not found"

                    git add spring-boot-app-manifests/deployment.yml || true
                    git commit -m "Update deployment image to version ${BUILD_NUMBER}" || echo "No changes to commit"
                    git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git main
                    '''
                }
            }
        }
    }
}
