pipeline {
    agent none

    stages {

        stage('Checkout') {
            agent any
            steps {
                git branch: 'main',
                    url: 'https://github.com/kwankhade1999/Spring-boot.git',
                    credentialsId: 'github-token'
            }
        }

        stage('Build and Test') {
            agent {
                docker {
                    image 'abhishekf5/maven-abhishek-docker-agent:v1'
                    args '-u 105:108 --add-host=host.docker.internal:host-gateway'
                }
            }
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Static Code Analysis') {
            agent {
                docker {
                    image 'abhishekf5/maven-abhishek-docker-agent:v1'
                    args '-u 105:108 --add-host=host.docker.internal:host-gateway'
                }
            }
            environment {
                SONAR_URL = 'http://host.docker.internal:9000'
            }
            steps {
                withCredentials([
                    string(credentialsId: 'sonarqube-token', variable: 'SONAR_AUTH_TOKEN')
                ]) {
                    sh '''
                      mvn sonar:sonar \
                        -Dsonar.login=$SONAR_AUTH_TOKEN \
                        -Dsonar.host.url=$SONAR_URL
                    '''
                }
            }
        }

        stage('Build and Push Docker Image') {
    agent any

    environment {
        DOCKER_IMAGE = "kunalwankhade/ultimate-cicd-pipeline:${BUILD_NUMBER}"
    }

    steps {
        script {
            sh '''
              docker build -t ${DOCKER_IMAGE} .
            '''

            docker.withRegistry('https://index.docker.io/v1/', 'docker-hub-creds') {
                docker.image(DOCKER_IMAGE).push()
            }
        }
    }
}

stage('Update Deployment File') {
            environment {
                // GitHub repository details
                GIT_REPO_NAME = "kwankhade1999/Spring-boot"
                GIT_USER_NAME = "kwankhade1999"
            }
            steps {
                // Use GitHub Personal Access Token securely
                withCredentials([string(credentialsId: 'github-token', variable: 'GITHUB_TOKEN')]) {

                    sh '''
                    git config --global user.email "git@github.com:kwankhade1999/Spring-boot.git"
                    git config --global user.name "kwankhade1999"

                    git checkout main
                    git pull origin main

                    sed -i "s#image: kunalwankhade/ultimate-cicd-pipeline:.*#image: kunalwankhade/ultimate-cicd-pipeline:${BUILD_NUMBER}#" spring-boot-app-manifests/deployment.yml || echo "deployment file not found"

                    git add spring-boot-app-manifests/deployment.yml || true
                    git commit -m "Update deployment image to version ${BUILD_NUMBER}" || echo "No changes to commit"
                    git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git main
                    '''
                }
            }
        }

    }
}
