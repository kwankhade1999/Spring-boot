pipeline {
    agent none

    stages {

        stage('Checkout') {
            agent any
            steps {
                git branch: 'main',
                    url: 'https://github.com/kwankhade1999/Spring-boot.git',
                    credentialsId: 'github-token'
            }
        }

        stage('Build and Test') {
            agent {
                docker {
                    image 'abhishekf5/maven-abhishek-docker-agent:v1'
                    args '-u 105:108 --add-host=host.docker.internal:host-gateway'
                }
            }
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Static Code Analysis') {
            agent {
                docker {
                    image 'abhishekf5/maven-abhishek-docker-agent:v1'
                    args '-u 105:108 --add-host=host.docker.internal:host-gateway'
                }
            }
            environment {
                SONAR_URL = 'http://host.docker.internal:9000'
            }
            steps {
                withCredentials([
                    string(credentialsId: 'sonarqube-token', variable: 'SONAR_AUTH_TOKEN')
                ]) {
                    sh '''
                      mvn sonar:sonar \
                        -Dsonar.login=$SONAR_AUTH_TOKEN \
                        -Dsonar.host.url=$SONAR_URL
                    '''
                }
            }
        }

        stage('Build and Push Docker Image') {
            agent any
            environment {
                DOCKER_IMAGE = "kunalwankhade/ultimate-cicd-pipeline:${BUILD_NUMBER}"
            }
            steps {
                script {
                    sh 'docker build -t ${DOCKER_IMAGE} .'
                    docker.withRegistry('https://index.docker.io/v1/', 'docker-hub-creds') {
                        docker.image(DOCKER_IMAGE).push()
                    }
                }
            }
        }

        stage('Update Deployment File') {
    agent any
    steps {
        withCredentials([
            usernamePassword(
                credentialsId: 'github-token1',
                usernameVariable: 'GIT_USER',
                passwordVariable: 'GIT_TOKEN'
            )
        ]) {
            sh '''
              git config user.email "kwankhade1999@users.noreply.github.com"
              git config user.name "kwankhade1999"

              git checkout main
              git pull origin main

              sed -i "s#image: kunalwankhade/ultimate-cicd-pipeline:.*#image: kunalwankhade/ultimate-cicd-pipeline:${BUILD_NUMBER}#" deployment.yml

              git add deployment.yml
              git commit -m "Update deployment image to ${BUILD_NUMBER}" || echo "No changes to commit"

              git remote set-url origin https://${GIT_USER}:${GIT_TOKEN}@github.com/kwankhade1999/Spring-boot.git
              git push origin main
            '''
        }
    }
}

    }
}
